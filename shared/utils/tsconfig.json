{
  "compilerOptions": {
    /* === Core settings === */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    /* === Module and target === */
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    /* === Type safety & compatibility === */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    /* === React support (ignored if not React) === */
    "jsx": "react-jsx",
    /* === Output formatting === */
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}